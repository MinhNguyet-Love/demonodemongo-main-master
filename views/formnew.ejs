<%- include('layouts/header'); %>
<main class="bg-light-blue-50 min-h-screen py-8">
  <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg border border-blue-300">
    <h1 class="text-3xl font-bold text-center text-blue-700 mb-6">Add User</h1>
    <form method="post" action="/users/create" class="space-y-5">
      <div>
        <label for="email" class="block mb-2 text-sm font-semibold text-blue-900">Email</label>
        <input 
          name="email" 
          type="email" 
          id="email" 
          class="shadow-md bg-blue-50 border border-blue-400 text-blue-900 text-sm rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-500 block w-full p-2.5"
          placeholder="name@example.com" 
          required
        />
      </div>
      
      <div>
        <label for="name" class="block mb-2 text-sm font-semibold text-blue-900">Username</label>
        <input 
          name="name" 
          type="text" 
          id="name" 
          class="shadow-md bg-blue-50 border border-blue-400 text-blue-900 text-sm rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-500 block w-full p-2.5"
          required 
        />
      </div>

      <div>
        <label for="role" class="block mb-2 text-sm font-semibold text-blue-900">Select Role</label>
        <select 
          name="role" 
          id="role" 
          class="bg-blue-50 border border-blue-400 text-blue-900 text-sm rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-500 block w-full p-2.5"
        >
          <option value="user">User</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <!-- Nút thêm người dùng -->
      <div class="mt-4">
        <button 
          type="submit" 
          class="w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 text-center"
        >
          Thêm người dùng
        </button>
      </div>
    </form>
  </div>
</main>
<%- include('layouts/footer'); %>
